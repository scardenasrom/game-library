<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout_upper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/main_layout_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary"
        android:paddingLeft="@dimen/xxlarge_spacing"
        android:paddingRight="@dimen/xxlarge_spacing"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/medium_spacing"
                android:paddingLeft="@dimen/xxlarge_spacing"
                android:paddingRight="@dimen/xxlarge_spacing"
                android:text="@string/main_search_explanation"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/main_text_input_layout_game_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/medium_spacing"
                android:layout_marginLeft="@dimen/large_spacing"
                android:layout_marginRight="@dimen/large_spacing"
                android:textColorHint="@color/white"
                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/main_text_input_edit_text_game_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/main_search_edit_text_hint"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/main_btn_game_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_normal_button"
                android:layout_marginLeft="@dimen/xxlarge_spacing"
                android:layout_marginRight="@dimen/xxlarge_spacing"
                android:text="@string/main_btn_search"
                android:textColor="@color/white"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_layout_empty_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_primary_dark"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true"
            >

            <ImageView
                android:layout_width="@dimen/img_width_height"
                android:layout_height="@dimen/img_width_height"
                android:layout_marginBottom="@dimen/large_spacing"
                android:scaleType="centerInside"
                android:src="@drawable/ic_controller_big"
                android:tint="@color/white"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dots_margin_bottom"
                android:paddingLeft="@dimen/xxlarge_spacing"
                android:paddingRight="@dimen/xxlarge_spacing"
                android:text="@string/main_empty_list_explanation"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text_large"
                />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>