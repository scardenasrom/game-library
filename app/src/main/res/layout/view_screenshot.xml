<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_screenshot_root_view"
    android:orientation="vertical"
    android:layout_width="@dimen/screenshot_width"
    android:layout_height="@dimen/screenshot_height"
    android:layout_margin="@dimen/xsmall_spacing"
    >

    <ImageView
        android:id="@+id/view_screenshot_image_view"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        />

</LinearLayout>